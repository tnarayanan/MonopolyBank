<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apps.tejasnarayanan.monopolybank.BankerActivity">

    <TextView
        android:id="@+id/statusLabelBanker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Status"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/moneyLabelBanker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$1500"
        android:textAlignment="center"
        android:textSize="60sp"
        android:layout_below="@+id/statusLabelBanker"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/worthLabelBanker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Total Worth"
        android:layout_below="@+id/moneyLabelBanker"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/listViewBanker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/statusLabelBanker"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/statusLabelBanker"
        android:layout_below="@+id/bankingLabel" />

    <TextView
        android:id="@+id/bankingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Banking"
        android:textSize="18sp"
        android:layout_below="@+id/worthLabelBanker"
        android:layout_toRightOf="@+id/moneyLabelBanker"
        android:layout_toEndOf="@+id/moneyLabelBanker"
        android:layout_marginTop="14dp" />

    <Button
        android:id="@+id/moneyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Money" />

    <Button
        android:id="@+id/propertyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/moneyButton"
        android:layout_alignRight="@+id/moneyButton"
        android:layout_below="@+id/moneyButton"
        android:layout_marginTop="73dp"
        android:text="Property" />

    <TextView
        android:id="@+id/ownedPropertyLabelBanker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Owned Property"
        android:layout_alignTop="@+id/bankingLabel"
        android:layout_toLeftOf="@+id/worthLabelBanker"
        android:layout_toStartOf="@+id/worthLabelBanker" />

</RelativeLayout>
